--[[
the LuCI model for vpnd
]]--

local fs = require "nixio.fs"

local f = SimpleForm("vpnd",
	translate("VPND - Custom Dnsmasq"),
	translate("Custom Dnsmasq allow you to add ipset rules and more."))

local o = f:field(Value, "_custom")

o.template = "cbi/tvalue"
o.rows = 20

function o.cfgvalue(self, section)
	return fs.readfile("/etc/mujjus/dnsmasq.d/custom.conf")
end

function o.write(self, section, value)
	value = value:gsub("\r\n?", "\n")
	fs.writefile("/etc/mujjus/dnsmasq.d/custom.conf", value)
	luci.sys.call("/etc/init.d/dnsmasq reload")
end

return f
